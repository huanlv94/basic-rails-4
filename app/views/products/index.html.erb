<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Mã SP</th>
      <th>Tên Sp</th>
      <th>Giá ban</th>
      <th>Ngày san xuat</th>
      <th>So luong ban</th>
      <th>Doanh thu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.MaSP %></td>
        <td><%= product.TenSP %></td>
        <td><%= product.GiaBan %></td>
        <td><%= product.NgaySanXuat %></td>
        <td><%= product.SoLuongBan %></td>
        <td><%= product.DoanhThu %></td>
        <td><%= link_to 'View', product,:class => "btn btn-info" %> 
            <%= link_to 'Edit', edit_product_path(product), :class => "btn btn btn-warning" %> 
            <%= link_to 'Destroy', product,:class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path,:class => "btn btn-primary" %>
<a href="../" class="btn btn-success">Xem report</a>
